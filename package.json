	},
	"scripts": {
		"dev": "bun .",
		"start": "bunx prisma migrate deploy && bun .",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint": "biome check .",
		"check:errors": "bun run typecheck && bun run lint",
		"i18n:info": "bun scripts/i18n.ts --info",
		"i18n:clean": "bun scripts/i18n.ts --clean:unused",
		"prepare": "husky",
		"format": "biome check --write ."
	},
	"lint-staged": {
		"**/*.{ts,js,json,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
